{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$PLUGIN_DIR/scripts/analyze-codebase.py\"",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$PLUGIN_DIR/scripts/keyword-amplifier.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$PLUGIN_DIR/scripts/comment-checker.py\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}

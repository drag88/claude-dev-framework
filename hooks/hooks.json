{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/analyze-codebase.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/analyze-codebase.py\" || true",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-init.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-init.py\" || true",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/keyword-amplifier.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/keyword-amplifier.py\" || true",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/git-push-review.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/git-push-review.py\" \"$TOOL_INPUT\" || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/console-log-detector.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/console-log-detector.py\" \"$TOOL_INPUT\" || true",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/comment-checker.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/comment-checker.py\" || true",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-logger.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-logger.py\" \"$TOOL_INPUT\" || true",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-checkpoint.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-checkpoint.py\" \"$TOOL_INPUT\" || true",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-verify-gate.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-verify-gate.py\" \"$TOOL_INPUT\" || true",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-logger.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-logger.py\" \"$TOOL_INPUT\" || true",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-summarize.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/memory-summarize.py\" || true",
            "timeout": 15
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-session-save.py\" && python3 \"$CLAUDE_PLUGIN_ROOT/scripts/hooks/flow-session-save.py\" || true",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f \"$CLAUDE_PLUGIN_ROOT/scripts/task-completeness-check.sh\" && bash \"$CLAUDE_PLUGIN_ROOT/scripts/task-completeness-check.sh\" || true",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
